{
    "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
    "productName": "ren-flow",
    "version": "0.1.0",
    "identifier": "cn.stapxs.renflow",
    "build": {
        "frontendDist": "../dist",
        "devUrl": "http://localhost:8080",
        "beforeDevCommand": "yarn dev",
        "beforeBuildCommand": "yarn build"
    },
    "app": {
        "macOSPrivateApi": true,
        "security": {
            "csp": null,
            "assetProtocol": {
                "enable": true,
                "scope": [
                    "**"
                ]
            }
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}
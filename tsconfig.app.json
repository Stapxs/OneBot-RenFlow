{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "compilerOptions": {
        "verbatimModuleSyntax": false,
        "lib": ["ESNext", "DOM"],
        "strictNullChecks": false,
        "composite": true,
        "baseUrl": ".",
        "paths": {
            "@app/*": ["src/*"],
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue"
    ]
}
